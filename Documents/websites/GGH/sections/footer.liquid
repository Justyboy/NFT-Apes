<!-- /sections/footer.liquid -->
{%- assign color_text = section.settings.color_text | default: '#000' -%}
{%- assign color_bg = section.settings.color_bg | default: '#fff' -%}

<style>
	.site-footer { background: {{ color_bg }}; color: {{ color_text }}; }
	.site-footer .footer-title { color: {{ color_text }}; }
	.footer-text,
	.footer-link,
    .footer-text a,
	.footer-copyright { color: {{ color_text | color_modify: 'alpha', 0.6 }}; }
	.footer-link:hover,
  	.footer-text a:hover,
	.footer-copyright a:hover { color: {{ color_text | color_modify: 'alpha', 0.8 }}; }
	.footer-tags-list a { border-color: {{ color_text | color_modify: 'alpha', 0.15 }}; color: {{ color_text | color_modify: 'alpha', 0.6 }}; }
	.footer-tags-list a:hover { border-color: {{ color_text | color_modify: 'alpha', 0.55 }}; color: {{ color_text | color_modify: 'alpha', 0.8 }}; }
	#mail::-webkit-input-placeholder { color: {{ color_text | color_modify: 'alpha', 0.65 }}; }
	#mail::-moz-placeholder { color: {{ color_text | color_modify: 'alpha', 0.65 }}; }
	#mail:-ms-input-placeholder { color: {{ color_text | color_modify: 'alpha', 0.65 }}; }
	#mail:-moz-placeholder { color: {{ color_text | color_modify: 'alpha', 0.65 }}; }
	#mail,
	.disclosure--footer .disclosure__toggle,
	.disclosure--footer .disclosure-list { color: {{ color_text }}; border-color: {{ color_text }}; background: {{ color_bg }}; }
	.disclosure--footer .disclosure-list__option,
	.disclosure--footer .disclosure__toggle::after { color: {{ color_text }}; }
	#subscribe { background: {{ color_text }}; border-color: {{ color_text }}; }
	#subscribe .custom-icon-long-arrow { color: {{ color_bg }}; }
	#subscribe:hover { background: {{ color_bg }}; }
	#subscribe:hover .custom-icon-long-arrow { color: {{ color_text }}; }
</style>
<footer class="site-footer" role="contentinfo" data-section-id="{{ section.id }}"  data-section-type="footer">
	<div class="footer-content wrapper">
		<div class="footer-blocks footer-blocks--{{ section.blocks.size }}">

		{%- for block in section.blocks -%}
			{%- case block.type -%}

			{%- when 'logo' -%}
				<div class="footer-block" {{ block.shopify_attributes }}>
					<a href="{{ routes.root_url }}" itemprop="url" class="footer-logo" style="width: {{ block.settings.logo_width }}px;">
					{%- if block.settings.image != blank -%}
						{%- capture image_attributes -%}
							itemprop="logo"
							width="{{ block.settings.logo_width }}"
						{%- endcapture -%}

						{%- capture container_attributes -%}
							style="width: {{ block.settings.logo_width }}px"
						{%- endcapture -%}

						{%- include 'responsive-image', image: block.settings.image, image_class: 'logo--footer', image_alt: shop.name, image_attributes: image_attributes, container_attributes: container_attributes -%}
					{%- else -%}
						<div class="placeholder-svg placeholder-svg--overlayed"
							 style="width: {{ block.settings.logo_width }}px; height: {{ block.settings.logo_width }}px;">
							{{ 'image' | placeholder_svg_tag: 'placeholder-svg-filled' }}
						</div>
					{%- endif -%}
					</a>
				</div>

			{%- when 'link' -%}
				{%- assign title = linklists[block.settings.menu].title -%}
				{%- assign show_title = block.settings.show_title -%}
				<div class="footer-block{% if show_title %} accordion-mobile{% endif %}" {{ block.shopify_attributes }}>
					<div class="grid--full">
						{%- if show_title -%}
							<h5 class="footer-title"><button class="accordion-mobile__title" aria-controls=".accordion__content">{{ title }}</button></h5>
						{%- endif -%}

						{% if linklists[block.settings.menu].links != empty %}
							<ul class="footer-links{% if show_title %} accordion-mobile__content{% endif %}" {% if title != blank %} aria-expanded="false"{% endif %}>
								{%- for link in linklists[block.settings.menu].links -%}
									<li><a class="footer-link" href="{{ link.url }}">{{ link.title }}</a></li>
								{%- endfor -%}
							</ul>
						{% endif %}
					</div>
				</div>

			{%- when 'blog' -%}
				{%- assign title = block.settings.title -%}
				{%- assign blog = blogs[block.settings.blog] | default: false -%}
				{%- assign layout = block.settings.layout -%}

				<div class="footer-block" {{ block.shopify_attributes }}>
					{%- if title != blank -%}
						<h5 class="footer-title">{{ title }}</h5>
					{%- endif -%}

					{%- if blog -%}
						{%- if layout == 'articles' -%}
							<ul class="footer-articles-list">
								{%- for article in blog.articles limit: 3 -%}
									<li><a href="{{ article.url }}" class="footer-article-title footer-link" title="{{ article.title }}"> {{ article.title | strip_html | truncatewords: 5 }}</a></li>
								{%- endfor -%}
							</ul>
						{%- else -%}
							{%- assign tags = blog.all_tags | default: false -%}
							{%- if tags -%}
								<ul class="footer-tags-list">
									{%- for tag in tags -%}
										<li><a href="{{ routes.root_url }}/blogs/{{ blog.handle }}/tagged/{{ tag | handle }}" class="footer-link">{{ tag }}</a></li>
									{%- endfor -%}
								</ul>
							{%- endif -%}
						{%- endif -%}
					{%- else -%}
						{% comment %} Onboarding content if no blog selected {% endcomment %}
						{%- if layout == 'articles' -%}
							<ul class="footer-articles-list">
								{%- for i in (1..3) -%}
									<li><span class="footer-article-title footer-link"">{{ 'homepage.onboarding.blog.title' | t }}</span></li>
								{%- endfor -%}
							</ul>
						{%- else -%}
							<ul class="footer-tags-list">
								{%- for i in (1..3) -%}
									<li><a href="#" class="footer-link">{{ 'homepage.onboarding.blog.tag' | t }}</a></li>
								{%- endfor -%}
							</ul>
						{%- endif -%}
					{%- endif -%}
				</div>

			{%- when 'newsletter' -%}
				{%- assign title = block.settings.heading-%}
				<div class="footer-block" {{ block.shopify_attributes }}>
					{%- if title != blank -%}
						<div class="h5 footer-title">{{ title }}</div>
					{%- endif -%}
					{%- include 'footer-newsletter' -%}
				</div>

			{%- when 'text' -%}
				{%- assign title = block.settings.title -%}
				{%- assign footer_text = block.settings.footer_text -%}

				<div class="footer-block footer-text" {{ block.shopify_attributes }}>
					<div>
						{%- if title != blank -%}
							<h5 class="footer-title">{{ title }}</h5>
						{%- endif -%}

						{{- footer_text -}}
					</div>
				</div>
			{%- endcase -%}
		{%- endfor -%}
		</div>
	</div>

	<div class="footer-bottom grid--full wrapper large--text-center medium--text-left">
		{%- include 'cross-border' -%}

		{%- if section.settings.show_social_links -%}
			{%- include 'footer-social' -%}
		{%- endif -%}

		{%- include 'footer-copyright' -%}

		{%- if section.settings.show_payment_icons -%}
			{%- include 'footer-payment' -%}
		{%- endif -%}
	</div>

</footer>

{% schema %}
{
	"name": "Footer",
	"max_blocks": 4,
	"settings": [
		{
			"type": "checkbox",
			"id": "show_social_links",
			"label": "Show social icons",
			"info": "Edit your social settings and accounts in Theme Settings",
			"default": true
		},
		{
			"type": "checkbox",
			"id": "show_payment_icons",
			"label": "Show payment icons",
			"default": true
		},
		{
			"type": "header",
			"content": "Colors"
		},
		{
			"type": "color",
			"id": "color_text",
			"label": "Text",
			"default": "#000"
		},
		{
			"type": "color",
			"id": "color_bg",
			"label": "Background",
			"default": "#fff"
		},
		{
			"type": "header",
			"content": "language selector",
			"info": "To add a language, go to your [language settings.](/admin/settings/languages)"
		},
		{
			"type": "checkbox",
			"id": "show_locale_selector",
			"label": "Show language selector",
			"default": true
		},
		{
			"type": "header",
			"content": "Currency selector",
			"info": "To add a currency, go to your [currency settings.](/admin/settings/payments)"
		},
		{
			"type": "checkbox",
			"id": "show_currency_selector",
			"label": "Show currency selector",
			"default": true
		}
	],
	"blocks": [
		{
			"type": "link",
			"name": "Link list",
			"settings": [
				{
					"type": "link_list",
					"id": "menu",
					"label": "Link list",
					"default": "footer",
					"info":"This menu won't show dropdown items"
				},
				{
					"type": "checkbox",
					"id": "show_title",
					"label": "Show link list title",
					"default": true
				}
			]
		},
		{
			"type": "text",
			"name": "Text",
			"settings": [
				{
					"type": "text",
					"id": "title",
					"label": "Heading",
					"default": "About us"
				},
				{
					"type": "richtext",
					"id": "footer_text",
					"label": "Text",
					"default": "<p>Leave your customers with a final message about your brand in this rich text block.</p>"
				}
			]
		},
		{
			"type": "blog",
			"name": "Blog",
			"settings": [
				{
					"type": "text",
					"id": "title",
					"label": "Heading",
					"default": "Our Blog"
				},
				{
					"type": "blog",
					"id": "blog",
					"label": "Choose blog to show recent article excerpts."
				},
				{
					"type": "select",
					"id": "layout",
					"label": "Layout",
					"default": "articles",
					"options": [
						{ "label": "Show recent articles", "value": "articles" },
						{ "label": "Show article tags", "value": "tags" }
					]
				}
			]
		},
		{
			"type": "newsletter",
			"name": "Newsletter",
			"settings": [
				{
					"type": "paragraph",
					"content": "Subscribers are added in the Customers section of your site admin."
				},
				{
					"type": "richtext",
					"id": "heading",
					"label": "Heading",
					"default": "<p>Newsletter</p>"
				}
			]
		},
		{
			"type": "logo",
			"name": "Logo",
			"settings": [
				{
					"type": "image_picker",
					"id": "image",
					"label": "Logo"
				},
				{
					"type": "range",
					"id": "logo_width",
					"label": "Custom logo width (in pixels)",
					"min":30,
					"max":250,
					"default": 100,
					"step":10,
					"unit":"px"
				}
			]
		}
	]
}
{% endschema %}

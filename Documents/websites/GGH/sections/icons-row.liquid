{% comment %} Icons row {% endcomment %}
{%- assign background = section.settings.color_icons_bg -%}
{%- assign color = section.settings.color_icons_text -%}
{%- assign alignment = section.settings.alignment -%}

<style>
	[data-section-id="{{ section.id }}"] .icons-row--background { color: {{ color }}; background-color: {{ background }}; }
	[data-section-id="{{ section.id }}"] .icons-row__item .icon path { fill: {{ color }}; }
</style>

<section data-section-id="{{ section.id }}" data-section-type="icons-row">
	{%- if section.blocks.size > 0 -%}
		<div class="icons-row--background">
			<div class="wrapper">
				<div class="icons-row__wrapper text-{{ alignment }}">
					<div class="icons-row__slider items--{{ section.blocks.size }}">
						{%- for block in section.blocks -%}
							{%- assign title = block.settings.title -%}
							{%- assign content = block.settings.content -%}
							{%- assign image = block.settings.icon_image -%}
							{%- assign icon = block.settings.icon_name -%}

							<div class="icons-row__item" {{ block.shopify_attributes }}>
								{%- if image != blank -%}
									<div class="icons-row__image">
										{%- include 'responsive-image', image: image, image_size: '512x512' -%}
									</div>
								{%- else -%}
									{%- case icon -%}
									{%- when 'award' -%}
										{%- include 'icon-award' -%}
									{%- when 'basket' -%}
										{%- include 'icon-basket' -%}
									{%- when 'ball' -%}
										{%- include 'icon-ball' -%}
									{%- when 'calendar' -%}
										{%- include 'icon-calendar' -%}
									{%- when 'camera' -%}
										{%- include 'icon-camera' -%}
									{%- when 'comment' -%}
										{%- include 'icon-comment' -%}
									{%- when 'data' -%}
										{%- include 'icon-data' -%}
									{%- when 'dollar' -%}
										{%- include 'icon-dollar' -%}
									{%- when 'email' -%}
										{%- include 'icon-email' -%}
									{%- when 'eye' -%}
										{%- include 'icon-eye' -%}
									{%- when 'fruits' -%}
										{%- include 'icon-fruits' -%}
									{%- when 'house' -%}
										{%- include 'icon-house' -%}
									{%- when 'lock' -%}
										{%- include 'icon-lock' -%}
									{%- when 'money' -%}
										{%- include 'icon-money' -%}
									{%- when 'phone' -%}
										{%- include 'icon-phone' -%}
									{%- when 'reload' -%}
										{%- include 'icon-reload' -%}
									{%- when 'shop' -%}
										{%- include 'icon-shop' -%}
									{%- when 'sync' -%}
										{%- include 'icon-sync' -%}
									{%- when 'target' -%}
										{%- include 'icon-target' -%}
									{%- when 'wallet' -%}
										{%- include 'icon-wallet' -%}
									{%- endcase -%}
								{%- endif -%}

								{%- if title != blank -%}
									<h3 class="icons-row__title">{{ title }}</h3>
								{%- endif -%}

								{%- if content != blank -%}
									<p class="icons-row__content">{{ content }}</p>
								{%- endif -%}
							</div>
						{%- endfor -%}
					</div>
				</div>
			</div>
		</div>
	{%- endif -%}
</section>


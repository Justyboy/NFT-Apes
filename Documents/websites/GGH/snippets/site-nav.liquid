<!-- /snippets/site-nav.liquid -->
{%- assign has_logo = false -%}
{%- if section.settings.logo != blank or section.settings.logo_not_home != blank or section.settings.show_shop_name -%}
  {%- assign has_logo = true -%}
{%- endif -%}

<!-- CHECK HIDDEN ITEM -->
{% for block in section.blocks %}
	{% if block.type == "custom_item" %}
	    {% assign hide_menu = hide_menu | join: "," %}
		{% assign hide_menu = hide_menu | append: block.settings.child %}
		{% assign hide_menu = hide_menu | split: "," %}
	{% endif %}
{% endfor %}

<div class="grid__item {% if has_logo %}large--two-thirds{% endif %} large--text-right" role="navigation" id="NavStandard">
  <ul class="site-nav" id="AccessibleNav">

    <li class="site-nav__item site-nav__item--compress">
      <button type="button" class="icon-fallback-text site-nav__link site-nav__link--icon js-drawer-open-left" aria-controls="NavDrawer">
        <span class="icon custom-icon-hamburger" aria-hidden="true"></span>
      </button>
      <a href="{{ routes.cart_url }}" class="site-header__cart-toggle {% unless template == 'cart' or settings.cart_type == 'page' %}js-drawer-open-right{% endunless %}" aria-controls="CartDrawer" aria-expanded="false">
        {{ 'layout.cart.title' | t }}
        <span class = "inline-parenthesis">(</span><span class = "CartCount">{{ cart.item_count }}</span><span class = "inline-parenthesis">)</span>
      </a>
    </li>

    {%- for link in linklists[section.settings.main-menu].links -%}

      {%- capture dropdown_links -%}
        {%- if link.links != blank -%}
          {%- for sub_link in link.links -%}
            <div class="site-nav__links site-nav__links--default">
              <li class="{% if sub_link.active %}site-nav__item--active {% endif %} {% if sub_link.levels == 1 %} has-sub-links {% else %} no-sub-links {% endif %}" {% if sub_link.levels == 1 %} aria-haspopup="true" {% endif %} aria-controls="submenu-toggle">
                <a href="{{ sub_link.url }}" class="site-nav__link"><span>{{ sub_link.title | escape }}</span></a>
                {% if sub_link.levels == 1 %}
                  <button class="sub-drawer-nav__toggle"><span class="custom-icon-arrow-right" aria-hidden="true"></span></button>
                {% endif %}
              </li>

            {% if sub_link.levels == 1 %}
              <div class="sub-sub-links" aria-expanded="false">
                {% for sub_sub_link in sub_link.links %}
                    <a class="site-nav__link" href= "{{sub_sub_link.url}}"><span>{{ sub_sub_link.title | escape }}</span></a>
                {% endfor %}
              </div>
            {% endif %}
            
            </div>
          {%- endfor -%}
        {%- endif -%}
      {%- endcapture -%}

      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          {%- assign link_title = link.title | escape | downcase -%}
          {%- assign megamenu_title = block.settings.title | escape | downcase -%}
          {%- assign megamenu = '' -%}
          {%- assign dropdown = '' -%}

          {%- case block.type -%}

            {%- when 'megamenu' -%}
              {%- capture megamenu -%}
                {%- if link_title == megamenu_title -%}

                  {%- assign megamenu_images_count = 0 -%}

                  {%- capture megamenu_images -%}
                    {%- for i in (1..4) -%}
                      {%- assign image_key = i | prepend: 'image_' -%}
                      {%- assign heading_key = i | prepend: 'title_' -%}
                      {%- assign link_key = i | prepend: 'link_' -%}

                      {%- assign image = block.settings[image_key] -%}
                      {%- assign heading = block.settings[heading_key] -%}
                      {%- assign image_link = block.settings[link_key] -%}

                      {%- if image != blank or heading != blank -%}
                        {% assign megamenu_images_count = megamenu_images_count | plus: 1 %}
                        <div class="megamenu__image" {{ block.shopify_attributes }}>
                          {%- unless image == blank -%}
                            {%- capture meganav_image -%}
                              <div class="megamenu__image-container" style="padding-top: {{ section.settings.image_aspect_ratio | times: 100 | append: '%' }};">
                                <div class="megamenu__image-bg lazyload"
                                     data-bgset="{% include 'bgset', image: image %}"
                                     data-sizes="auto"
                                     data-parent-fit="cover"
                                ></div>
                                <noscript>
                                  <div class="megamenu__image-bg" style="background-image: url( {{ image | img_url: '1024x1024' }} ); padding-top: {{ section.settings.image_aspect_ratio | times: 100 | append: '%' }};"></div>
                                </noscript>
                              </div>
                            {%- endcapture -%}

                            {%- unless image_link == blank -%}
                              <a href="{{ image_link }}">{{ meganav_image }}</a>
                            {%- else -%}
                              {{ meganav_image }}
                            {%- endunless -%}
                          {%- endunless -%}

                          {%- unless heading == blank -%}
                            <a {% if image_link != blank %} href="{{ image_link }}"{% endif %} class="megamenu__image-title">{{ heading }}</a>
                          {%- endunless -%}
                        </div>
                      {%- endif -%}
                    {%- endfor -%}
                  {%- endcapture -%}

                  {%- capture dropdown_links -%}
                    {%- if link.links != blank -%}
                      {%- for sub_link in link.links -%}
    					 {% assign hide_menu_item = false %}
    					{% if hide_menu contains sub_link.title %}
    						{% assign hide_menu_item = true %}
    				    {% endif %}
    					
                        <div class="site-nav__links megamenu__links" {% if hide_menu_item %}style="display: none; " {% endif %}>
                          <li class="{% if sub_link.active %}site-nav__item--active {% endif %} {% if sub_link.levels == 1 %} has-sub-links {% else %} no-sub-links {% endif %}" {% if sub_link.levels == 1 %} aria-haspopup="true" {% endif %} aria-controls="submenu-toggle">
                            <a href="{{ sub_link.url }}" class="site-nav__link"><span>{{ sub_link.title | escape }}</span></a>
                            {% if sub_link.levels == 1 %}
                              <button class="sub-drawer-nav__toggle"><span class="custom-icon-arrow-right" aria-hidden="true"></span></button>
                            {% endif %}
                          </li>

                          {%- if sub_link.levels == 1 -%}
                            <div class="sub-sub-links" aria-expanded="false">
                              {% for sub_sub_link in sub_link.links %}
                                  <a class="site-nav__link" href= "{{sub_sub_link.url}}"><span>{{ sub_sub_link.title | escape }}</span></a>
                              {% endfor %}
                            </div>
                          {%- endif -%}
                          
                          {% for block in section.blocks %}
                              {% if block.type == "custom_item" %}
                                  {% if block.settings.parent == sub_link.title %}
                          			  {% for custom_link in linklists[block.settings.menu].links %}
                                      <li class="{% if custom_link.active %}site-nav__item--active {% endif %} {% if custom_link.levels == 1 %} has-sub-links {% else %} no-sub-links {% endif %}" {% if custom_link.levels == 1 %} aria-haspopup="true" {% endif %} aria-controls="submenu-toggle">
                                        <a href="{{ custom_link.url }}" class="site-nav__link"><span>{{ custom_link.title | escape }}</span></a>
                                        {% if custom_link.levels == 1 %}
                                          <button class="sub-drawer-nav__toggle"><span class="custom-icon-arrow-right" aria-hidden="true"></span></button>
                                        {% endif %}
                                      </li>
                          			  {%- if custom_link.levels == 1 -%}
                                        <div class="sub-sub-links" aria-expanded="false">
                                          {% for sub_custom_link in custom_link.links %}
                                              <a class="site-nav__link" href= "{{sub_custom_link.url}}"><span>{{ sub_custom_link.title | escape }}</span></a>
                                          {% endfor %}
                                        </div>
                          			  
                                      {%- endif -%}
                          			{% endfor %}
                                  {% endif %}
                              {% endif %}
                          {% endfor %}
                        
                        </div>
                      {%- endfor -%}
                    {%- endif -%}
                  {%- endcapture -%}

                  <div class="megamenu megamenu--{{ block.settings.images_position }} megamenu--links-{{ link.links.size }} {% if megamenu_images == blank %} megamenu--no-images{% endif %}">
                    <div class="wrapper">
                      <ul class="megamenu-inner site-nav__megamenu" data-levels="{{ link.levels }}" aria-expanded="false">

                        {%- unless megamenu_images == blank -%}
                          <div class="megamenu__images megamenu__images--{{ megamenu_images_count }}">
                            {{ megamenu_images }}
                          </div>

                          {%- unless block.settings.images_position == 'stacked' -%}
                            {%- for i in (2..megamenu_images_count) -%}
                              <div class="megamenu__push"></div>
                            {%- endfor -%}
                          {%- endunless -%}
                        {%- endunless -%}

                        {{ dropdown_links }}
                       </ul>
                    </div>
                  </div>
                  <!-- END MEGAMENU WRAPPER -->
                  {% break %}
                {%- endif -%}
              {%- endcapture -%}

            {% when 'dropdown_image' %}
              {%- capture dropdown_menu -%}
                {%- assign link_title = link.title | escape | downcase -%}
                {%- assign megamenu_title = block.settings.title | escape | downcase -%}
                
                {%- if link_title == megamenu_title -%}

                  {%- capture dropdown_image -%}
                    {%- assign image = block.settings.image -%}
                    {%- assign image_link = block.settings.link -%}
                    {%- assign image_position = block.settings.image_position -%}

                    
                    {%- unless image_link == blank -%}
                      <a href="{{ image_link }}">
                    {%- endunless -%}
                      
                    {%- unless image == blank -%}
                      <div class="dropdown__image-img-container" style="padding-top: {{ section.settings.image_aspect_ratio | times: 100 | append: '%' }};">
                        <div class="dropdown__image-img-bg lazyload"
                          data-bgset="{% include 'bgset', image: image %}"
                          data-sizes="auto"
                          data-parent-fit="cover"
                        ></div>
                        <noscript>
                          <div class="dropdown__image-img-bg" style="background-image: url( {{ image | img_url: '1024x1024' }} ); padding-top: {{ section.settings.image_aspect_ratio | times: 100 | append: '%' }};"></div>
                        </noscript>
                      </div>
                    {%- else -%}
                      <div class="placeholder-svg placeholder-svg--overlayed">
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg-filled' }}
                      </div>
                    {%- endunless -%}

                    {%- unless image_link == blank -%}
                      </a>
                    {%- endunless -%}
                  
                  {%- endcapture -%}
                  
                  {%- capture dropdown_links -%}
                    {%- if link.links != blank -%}
                      {%- for sub_link in link.links -%}
                        <div class="site-nav__dropdown-links">
                          <li class="{% if sub_link.active %}site-nav__item--active {% endif %} {% if sub_link.levels == 1 %} has-sub-links {% else %} no-sub-links {% endif %}" {% if sub_link.levels == 1 %} aria-haspopup="true" {% endif %} aria-controls="submenu-toggle">
                            <a href="{{ sub_link.url }}" class="site-nav__link"><span>{{ sub_link.title | escape }}</span></a>
                            {% if sub_link.levels == 1 %}
                              <button class="dropdown-sub-links__toggle icon-fallback-text">
                                <span class="icon icon-plus custom-icon-plus" aria-hidden="true"></span>
                                <span class="icon icon-minus custom-icon-minus" aria-hidden="true"></span>
                                <span class="fallback-text">See More</span>
                              </button>
                            {% endif %}
                          </li>

                        {% if sub_link.levels == 1 %}
                          <div class="sub-dropdown-links" aria-expanded="false">
                            {% for sub_sub_link in sub_link.links %}
                                <a class="site-nav__link" href= "{{sub_sub_link.url}}"><span>{{ sub_sub_link.title | escape }}</span></a>
                            {% endfor %}
                          </div>
                        {% endif %}
                        
                        </div>
                      {%- endfor -%}
                    {%- endif -%}
                  {%- endcapture -%}
                  
                  <ul class="site-nav__dropdown" data-levels="{{ link.levels }}" aria-expanded="false">
                    <div class="dropdown__container {% if image_position == 'right' %}dropdown__container--reversed{% endif %}">
                      <div class="dropdown__image dropdown__image--{{ image_position }} {% if dropdown_links == blank %}dropdown__image--no-links{% endif %}" {{ block.shopify_attributes }}>
                        <div class="dropdown__image-img">
                          {{ dropdown_image }}
                        </div>
                      </div>
                      
                      {%- if dropdown_links != blank -%}
                        <div class="dropdown__links">
                          {{ dropdown_links }}
                        </div>
                      {%- endif -%}
                    </div>
                  </ul>
                  
                  {% break %}
                {%- endif -%}
              {%- endcapture -%}
            
          {% endcase %}

        {%- endfor -%}         
      {%- endif -%}

      {%- if dropdown_links != blank or dropdown_menu != blank or megamenu != blank -%}
        <li class="site-nav__item site-nav__item--expanded site-nav__item--has-dropdown{% if link.active %} site-nav__item--active{% endif %} {% if megamenu != blank %}site-nav__item--has-meganav{% endif %} {% if link.links == blank %}site-nav--no-links{% endif %}" aria-haspopup="true" aria-controls="submenu-toggle">
          <div class = "drawer-nav__has-sublist">
            <a href="{{ link.url }}" class="site-nav__link">
              {{ link.title | escape }}
            </a>
          </div>
          <button class = "drawer-nav__toggle"><span class="custom-icon-arrow-right" aria-hidden="true"></span></button>

          {%- if megamenu != blank -%}
            {{ megamenu }}
          {%- elsif dropdown_menu != blank -%}
            {{ dropdown_menu }}
          {%- elsif dropdown_links != blank -%}
            <ul class="site-nav__dropdown" data-levels="{{ link.levels }}" aria-expanded="false">
              {{ dropdown_links }}
            </ul>
          {%- endif -%}

        </li>
      {%- else -%}
        <li class="site-nav__item site-nav__item--expanded{% unless template == 'index' %}{% if link.active %} site-nav__item--active{% endif %}{% endunless%}">
          <a href="{{ link.url }}" class="site-nav__link">{{ link.title | escape }}</a>
        </li>
      {%- endif -%}
    {%- endfor -%}

    <li class="site-nav__item--expanded site-nav__icons">
      <ul>
        {% if shop.customer_accounts_enabled %}
        <li class="site-nav__item site-nav__item--icon">
          <a href="{{ routes.account_url }}" class="site-header__account">
            {% include 'icon-user' %}
          </a>
        </li>
        {% endif %}

        {% if section.settings.show_search %}
        <li class="site-nav__item site-nav__item--icon">
          <a href="#" class="site-header__search nav-search__open">
            {% include 'icon-search' %}
          </a>
        </li>
        {% endif %}
        
        <li class="site-nav__item site-nav__item--icon">
          <a href="{{ routes.cart_url }}" class="site-header__cart-toggle {% unless template == 'cart' or settings.cart_type == 'page' %}js-drawer-open-right{% endunless %}" aria-controls="CartDrawer" aria-expanded="false">
            {% include 'icon-shopping-bag' %}
            <span id="CartCount" class = "CartCount">{{ cart.item_count }}</span>
          </a>
        </li>
      </ul>
    </li>
  </ul>
</div>

<div class="grid__item largest--hide {% if has_logo %}one-half{% endif %}">
  <div class="mobile-toggle-menu">
    <button type="button" class="icon-fallback-text js-drawer-open-left" aria-controls="NavDrawer">
      <span class="icon custom-icon-hamburger" aria-hidden="true"></span>
    </button>

{%- capture logo_not_home -%}
  {%- assign image = section.settings.logo_not_home -%}
  {%- if image != blank -%}
    <a href="{{ routes.root_url }}" itemprop="url" class="site-header__logo-link site-header__logo-link--other {% if section.settings.logo == blank %}site-header__logo-link--single{% endif %}">
      {% assign image_widths = '295,394,590,700,800,1000,1200,1500,1800,2000,2400' %}
      {% include 'theme-rias' %}
      <img 
         class="lazyload"
         src="{{ image | img_url: 'small' }}"
         data-src="{{ image_url_pattern }}"
         data-widths= "[{{ image_widths }}]"
         data-aspectratio="{{image.aspect_ratio }}"
         data-sizes="auto"
         height="{{ section.settings.logo_max_width | divided_by: image.aspect_ratio }}px"
         alt="{{ image.alt | escape }}">
      <noscript>
        <img src="{{ image | img_url: '1024x' }}" alt="{{ image.alt | escape }}">
      </noscript>
    </a>
  {%- endif -%}
{%- endcapture -%}

{%- capture logo_home -%}
  {%- assign image = section.settings.logo -%}
  {%- if image != blank -%}
    <a href="{{ routes.root_url }}" itemprop="url" class="site-header__logo-link site-header__logo-link--home {% if section.settings.logo_not_home == blank %}site-header__logo-link--single{% endif %}">
      {% assign image_widths = '295,394,590,700,800,1000,1200,1500,1800,2000,2400' %}
      {% include 'theme-rias' %}
      <img 
         class="lazyload"
         src="{{ image | img_url: 'small' }}"
         data-src="{{ image_url_pattern }}"
         data-widths= "[{{ image_widths }}]"
         data-aspectratio="{{image.aspect_ratio }}"
         data-sizes="auto"
         height="{{ section.settings.logo_max_width | divided_by: image.aspect_ratio }}px"
         alt="{{ image.alt | escape }}">
      <noscript>
        <img src="{{ image | img_url: '1024x' }}" alt="{{ image.alt | escape }}">
      </noscript>
    </a>
  {%- endif -%}
{%- endcapture -%}

{%- if logo_not_home != blank or logo_home != blank or section.settings.show_shop_name -%}
  <div class="grid__item largest--one-third one-half">
    <h1 class="site-header__logo large--left" itemscope itemtype="http://schema.org/Organization">
      
      {{- logo_not_home -}}
      {{- logo_home -}}

      {%- if section.settings.show_shop_name -%}
        <a class="site-header__logo-text" href="{{ routes.root_url }}" itemprop="url">{{ shop.name }}</a>
      {%- endif -%}
    </h1>
  </div>
{%- endif -%}
 

      <a href="{{ routes.cart_url }}" class="site-header__cart-toggle {% unless template == 'cart' or settings.cart_type == 'page' %}js-drawer-open-right{% endunless %}" aria-controls="CartDrawer" aria-expanded="false">
    {{ 'layout.cart.title' | t }}
    <span class = "inline-parenthesis">(</span><span class = "CartCount">{{ cart.item_count }}</span><span class = "inline-parenthesis">)</span>
  </a> 
  
  

  </div>

</div>



.image-column__dot {
  position: absolute;
  width: 13px;
  height: 13px;
  background: $colorBgBody;
  color: $colorTextBody;
  border-radius: 50%;
  @include transform( translate(-50%, -50%) );

  &::before,
  &::after {
    content: '';
    position: absolute;
    border: 1px solid $colorBgBody;
    border-radius: 50%;
  }

  &::before {
    top: -10px;
    right: -10px;
    bottom: -10px;
    left: -10px;
  }
  &::after {
    top: -21px;
    right: -21px;
    bottom: -21px;
    left: -21px;
  }

  @include at-query ($max, $preLargest) {
    &::before {
      top: -8px;
      right: -8px;
      bottom: -8px;
      left: -8px;
    }

    &::after {
      top: -16px;
      right: -16px;
      bottom: -16px;
      left: -16px;
    }
  }
  @include at-query ($max, $medium) {
    display: none;
  }
}

.dot__line {

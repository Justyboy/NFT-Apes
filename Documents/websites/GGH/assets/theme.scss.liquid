/*============================================================================
  #Site Nav and Dropdowns
==============================================================================*/
#NavStandard {
  @include at-query ($max, $preLargest) {
    display: none !important;
  }
}

.site-nav {
  @include size-body(16px);
  cursor: default;
  margin: 0 0 0 (-$gutter / 2);
  list-style: none;
  display: flex;
  align-items: center;
  justify-content: flex-end;

  @include at-query ( $min, $large ) {
    position: absolute;
    top: 0;
    right: 0;
    height: 100%;
    width: 100%;
    padding-right: 50px;
  }
}

.site-header[data-nav-position="center"]:not(.site-header--force-nav-right) {
  @include at-query ( $min, $large ) {
    .site-nav:not(.site-nav--compress) {
      left: 0;
      right: 0;
      width: 100%;
      text-align: center;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0;
      padding-left: 0;
      padding-right: 0;

      .site-nav__icons {
        position: absolute;
        top: 0;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        right: 50px;
      }
    }
  }
}

.site-nav__item {
  position: relative;
  display: flex;
  align-items: center;
  margin: 0 30px 0 0;
  padding: 0;

  &:last-child { margin-right: 0; }

  [data-nav-position="center"]:not(.site-header--force-nav-right) & {
    &:not(.site-nav__item--icon) {
      @include at-query ( $min, $large ) {
        margin-left: 15px;
        margin-right: 15px;
      }
    }
  }

  li { display: block; }

  .custom-icon-hamburger,
  .dropdown-sub-links__toggle { color: $colorHeaderText; }

  .custom-icon-arrow-right {
    display: block;
    color: $colorHeaderText;
    @include transform( rotate(90deg) );
  }

  .icon {
    width: 22px;
    height: 22px;
  }

  .icon--search,
  .icon--user {
    g {
      stroke: $colorHeaderText;
    }
  }

  .icon--cart {
    height: 27px;
    margin-bottom: 2px;
    path { fill: $colorHeaderText; }
  }

  .site-nav__dropdown {
    .custom-icon-arrow-right,
    .dropdown-sub-links__toggle {
      color: $dropdownTextColor;
    }
  }
}

.site-nav__item--icon { margin-right: 20px; }
.site-nav__item--compress { margin-right: 0; }
.site-nav__item--has-dropdown {
  padding-bottom: 15px;
  margin-bottom: -15px;
}
.site-nav__item--has-meganav {
  position: static;
  padding-bottom: 30px;
  margin-bottom: -30px;

  &:hover {
    height: 100%;
    display: flex;
    align-items: center;
  }
}

.dropdown__container {
  display: flex;
  padding: 20px 0;
}

.dropdown__container--reversed {
  flex-direction: row-reverse;
}

.dropdown__image {
  width: 220px;
  position: relative;

  img {
    display: block;
    width: 100%;
    max-height: 500px;
    object-fit: contain;
  }

  a {
    padding: 0;
  }
}

.dropdown__image--left {
  margin-left: 20px;
  margin-right: 5px;
  padding-right: 20px;
  border-right: 1px solid $colorBorder;

  &.dropdown__image--no-links {
    border-right: 0;
    margin-right: 0;
  }
}

.dropdown__image--right {
  margin-right: 20px;
  margin-left: 15px;
  padding-left: 20px;
  border-left: 1px solid $colorBorder;

  &.dropdown__image--no-links {
    border-left: 0;
    margin-left: 0;
  }
}

.dropdown__image-img {
  position: relative;

  .placeholder-svg {
    .grid__item & {
      position: relative;
    }
  }

  .placeholder-svg-filled {
    display: block;
    width: 100%;
    height: 200px;
  }
}
.dropdown__image-img-container {
  position: relative;
  min-height: 1px;
  height: 0;
  padding-top: 100%;
}
.dropdown__image-img-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
}

.dropdown__links {
  max-width: 320px;
  margin-top: -12px;

  .site-nav__link {
    display: block;
  }

  .has-sub-links {
    a {
      padding-right: 50px;
    }
  }

  .sub-dropdown-links {
    display: none;
    padding-left: 20px;
    margin-bottom: 5px;
  }

  .dropdown-sub-links__toggle {
    position: absolute;
    top: 0;
    right: 0;
    height: 100%;
    line-height: inherit;
    padding: 8px 0;
    display: flex;
    align-items: center;
    justify-content: center;

    .icon {
      color: inherit;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .icon-minus {
      display: none;
    }

    &.is-expanded {
      .icon-minus { display: flex; }
      .icon-plus { display: none; }
    }
  }
}

.site-nav__dropdown-links {
  margin-right: 15px;

  & > li:first-child { padding-top: 0; }
  .dropdown__container--reversed & {
    margin-right: 0;
  }
}

.site-nav__item--icon {
  a {
    height: 24px;
    display: flex;
    align-items: center;
  }

  @include at-query ( $max, $largish ) {
    display: none;
  }
}

.site-nav__icons {
  position: relative;
  display: inline-block;
  vertical-align: middle;
  margin: 0;
  padding: 0;

  & > ul {
    display: flex;
    align-items: center;
    margin: -2px 0 0;

    li:last-child { padding-right: 0; }
  }
}

#CartCount {
    bottom: -8px;
    position: absolute;
    left: 10px;
    max-width: 55px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
    text-align: center;
    font-style: normal;
    color: opposite($colorAccent);
    font-weight: $font-weight-bold;
    text-transform: none;
    background: $colorAccent;
    border-radius: 50%;
    min-width: 18px;
    height: 18px;
    padding: 0 3px;
    font-size: 11px;
    line-height: 18px;
    display: inline-block;
    vertical-align: top;

  @include at-query ( $max, $largish ) {
    display: none;
  }
}

.inline-parenthesis {
  display: inline-block;
}

.drawer-nav__toggle {
  display: inline-block;
  width: 22px;
  height: 26px;
  vertical-align: middle;
  cursor: pointer;
  padding: 0 0 0 10px;
}

.drawer-nav__toggle {
  .custom-icon-arrow-right:before{
    vertical-align: bottom;
  }
}

.sub-drawer-nav__toggle {
  @extend .drawer-nav__toggle;
  width: 38px;
  height: 38px;
  position: absolute;
  top: 0;
  right: 0;
  line-height: 0;
  padding: 0;
  @include transition( all, 0.2s, ease );

  .custom-icon-arrow-right { 
    color: $dropdownTextColor !important; 
    @include transform( none );
  }

  .has-sub-links:hover & {
    @include transform( translateX(4px) );
  }
}

/*================ Home to hamburger and cart that toggle drawers ================*/
.site-nav--mobile {
  @extend .site-nav;

  .text-right & {
    margin: 0 (-$gutter / 2) 0 0;
  }
}

.site-nav__link {
  @include size-body(16px);
  display: block;
  text-decoration: none;
  padding: 0;
  white-space: nowrap;
  color: $colorHeaderText;

  .site-nav--mobile & {
    display: inline-block;
  }

  &:active {
    text-decoration: underline;
  }

  &:hover,
  &:active,
  &:focus {
    color: darken($colorHeaderText, 10%);
  }

  @include at-query ( $max, $largish ) {
    padding: 15px 20px;
  }

  @include at-query ( $max, $small ) {
    padding: 0;
  }
}

.custom-icon-hamburger {
  width: 22px;
  height: 22px;
  font-size: 22px;
  line-height: 22px;
  float: right;
  color: $colorHeaderText;
}

/*================ Dropdowns ================*/
.site-nav__dropdown {
  display: none;
  background: $dropdownBg;
  position: absolute;
  top: 100%;
  left: 0;
  margin: 0;
  border-radius: 3px;
  border: 1px solid $dropdownLight;
  text-align: left;

  .site-nav__item--has-dropdown.nav-hover &,
  .nav-focus + & {
    display: block;
  }

  a {
    color: $dropdownTextColor;
    padding: 8px 15px;

    &:hover,
    &:active,
    &:focus {
       color: darken($dropdownTextColor, 10%);
    }
  }

  .dropdown__image a { padding: 0; }

  li {
    position: relative;
    border-bottom: 1px solid lighten($dropdownTextColor, 80%);

    &:last-of-type {
      border-bottom: none;
    }
  }
}

.site-nav__dropdown--right {
  left: auto;
  right: 18px;
}

.site-nav--compress {
  .site-nav__item--expanded {
/*     display: none; */
  }
}

.site-nav__item--compress {
  display: none;
  align-items: center;
  justify-content: flex-end;

  .site-nav--compress & { display: flex; }
  .site-header__cart-toggle { margin-right: -10px; }
  a, button { padding: 6px 10px; }
}

.drawer-nav__has-sublist {
  display: inline-block;
  vertical-align: middle;
}

.megamenu__links { position: relative; }

.site-nav__links--default {
  position: relative;

  .has-sub-links:hover {
    & + .sub-sub-links{
      display: block;
    }
  }
  .sub-sub-links:hover{
    display: block;
  }

  .has-sub-links {
    margin-bottom:0px;
    a { padding-right: 50px; }
  }

  .sub-sub-links {
    display: none;
    border-radius: 3px;
    min-width: 100%;
    position: absolute;
    top: -5px;
    left: 100%;
    background: $dropdownBg;
    border: 1px solid $dropdownLight;
    border-top-left-radius: 0px;

    &:first-of-type { top: -1px; }

    .site-nav__link {
      display: block;
      width: 100%;
      border-left: 0;
    }

    .site-nav__link:first-of-type {
      margin: 0 0 0 -1px;
      padding-left: 16px;
      background: $dropdownBg;
      position: relative;
    }
  }

  .sub-sub-links--left {
    right: 100%;
    left: auto;
    border-radius: 3px 0 3px 3px;

    .site-nav__link:first-of-type {
      margin-left: 3px;
      padding-left: 12px;
    }
  }

  &.site-nav__links:first-of-type {
    .sub-sub-links {
      .site-nav__link:first-of-type {
        margin: -1px 0 0 -3px;
        padding-left: 18px;
        border-top: 1px solid $dropdownLight;
      }
    }

    .sub-sub-links--left {
      .site-nav__link:first-of-type {
        margin-left: 3px;
        padding-left: 12px;
      }
    }
  }

  &.site-nav__links:last-of-type {
    .sub-sub-links {
      .site-nav__link:first-of-type {
        margin: 0 0 -1px -3px;
        padding-left: 18px;
      }
    }

    .sub-sub-links--left {
      .site-nav__link:first-of-type {
        margin-left: 3px;
        padding-left: 12px;
      }
    }
  }

  &.nav-hover > .sub-sub-links {
    display: block;
  }
}

/* effect-shine */
@-webkit-keyframes shine {
  from {
    -webkit-mask-position: 150%;
  }

  to {
    -webkit-mask-position: -50%;
  }
}

/*============================================================================
  #Mega menu
==============================================================================*/
.megamenu {
  position: absolute;
  top: 100%;
  right: 0px;
  width: 100%;
  z-index: -1;
  text-align: left;
  color: $dropdownTextColor;
  background: $dropdownBg;
  box-shadow: 0 1px 3px rgba(0, 0, 0, .15);
  transition: opacity .2s ease, visibility 0s linear .2s;
  max-height: calc(80vh - 109px);
  opacity: 0;
  visibility: hidden;
  overflow-x: hidden;
  overflow-y: auto;
  pointer-events: none;

  [data-nav-position="center"]:not(.site-header--force-nav-right) & {
    right: 0;
  }

  .nav-hover & {
    opacity: 1;
    visibility: visible;
    transition: opacity .2s ease, visibility 0s linear 0s;
    pointer-events: auto;
  }

  .megamenu__links {
    float: left;
    width: calc(25% - 50px);
    margin: 0 25px;
    padding: 0 0 50px;

    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: -26px;
      width: 2px;
      height: 100%;
      background: $colorBorder;
      opacity: .25;
    }

    &:nth-child(4n+1) {
      clear: both;

      &::before {
        content: none;
      }
    }

    .site-nav__link {
      display: block;
      padding: 5px 0;
      @include size-body(14px);
      color: inherit;

      span {
        display: inline-block;
      }

      &:hover {
        opacity: .85;
      }
    }

    & > li > .site-nav__link {
      display: block;
      margin-top: 20px;
      margin-bottom: 16px;
      padding-bottom: 8px;
      opacity: 1;
      border-bottom: 1px solid $colorBorder;
      @include size-body(18px);
    }

    .sub-drawer-nav__toggle {
      display: none;
    }
  }

  .sub-sub-links {
    display: block;
    position: static;
    border-radius: 0;
    background: transparent;
    border: 0;

    .site-nav__link {
      padding: 0;
      border: 0;
      margin-bottom: 6px;
    }
  }

  .site-nav__link { white-space: normal; }
}

.megamenu__push + .megamenu__links::before,
.megamenu__images + .megamenu__links::before {
  content: none;
}

.megamenu-inner {
  padding: 30px 0;
  margin: 0 -25px;

  &::after {
    content: '';
    display: table;
    clear: both;
    line-height: 0;
  }
}

.megamenu--no-images {
  &.megamenu--links-1,
  &.megamenu--links-2,
  &.megamenu--links-3 {
    .megamenu-inner {
      display: flex;
      justify-content: center;
    }
  }
}

.megamenu__images {
  display: flex;
  width: 25%;

  .megamenu--left & {
    float: left;
  }

  .megamenu--right & {
    float: right;
  }

  .megamenu--stacked & {
    float: left;
    flex-direction: column;
    width: 25%;

    .megamenu__image {
      width: calc(100% - 50px);
    }
  }

  .site-nav--no-links & {
    margin: 0 auto;
    float: none;
  }
}
.megamenu__images--2 {
  width: 50%;

  .megamenu__image {
    width: calc(50% - 50px);
  }
}
.megamenu__images--3 {
  width: 75%;

  .megamenu__image {
    width: calc(33.33% - 50px);
  }
}
.megamenu__images--4 {
  width: 100%;

  .megamenu__image {
    width: calc(25% - 50px);
  }
}

.megamenu__image {
  width: calc(100% - 50px);
  margin: 0 25px 25px;
  text-align: center;
  position: relative;
}
.megamenu__image-container {
  position: relative;
  min-height: 1px;
  padding-top: 100%;
  line-height: 0;
}
.megamenu__image-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;

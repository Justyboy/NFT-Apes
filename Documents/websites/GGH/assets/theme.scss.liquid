.popup-quick-buy {
  // hide on mobile
  @include at-query( $max, $medium ) {
    display: none !important;
  }

  .product-tabs {display: none;}
  &.mfp-bg {opacity: 0 !important;}
  .mfp-zoom-in-cur:hover {cursor: default;}
  .wrapper {
    padding: 0;
  }
  .mfp-content {
    max-width: 1000px;
    margin: 50px 0;
    padding: 30px;
    background: $colorBgBody;
    box-shadow: 0 0 10px rgba(0,0,0,.4);

    @include at-query( $max, $preLargest ) {
      margin: 0;
    }

    .product-single {
      background: $colorBgBody;
      transition: opacity .2s ease, visibility 0s linear .2s;

      .product-form {
        visibility: visible;
      }

      &.is-loading {
        opacity: 0;
        visibility: hidden;
      }
    }

    .grid-uniform {
      margin: 0 -5px;
      display: flex;
      flex-wrap: wrap;

      .grid__item {
        float: none;
        width: 20%;
        flex: 0 0 20%;
        padding: 0 5px !important;

        img {
          width: 100%; height: auto;
        }
      }
    }

    .product-description.rte {
      width: 100% !important;
    }
  }

  @include at-query( $max, $medium ) {
    .selector-wrapper {
      & + .selector-wrapper {
        margin-top: 10px;
      }
    }
  }
  
  @include at-query( $min, $largest ) {
    // Popup content alignment fix
    .text-center {
      .swatch { justify-content: flex-start; }
      .swatch .header,
      .product-description.rte,
      &.product-description-wrapper { text-align: left !important; }
      .btn { margin-left: 0px; }
      .swatch .swatch-element {
        margin-left: 0;
        margin-right: 10px;
      }
      .rte ol,
      .rte ul {
        align-items: flex-start;
      }
    }
  }
}

.product-grid-item {
  .product__media {
    display: block;
    position: relative;
    width: 100%;
    height: 0;
    padding-top: {{ settings.image_aspect_ratio | times: 100 | append: '%' }};
    background-size: {{ settings.image_size | default: 'cover' }};
    background-repeat: no-repeat;
    background-position: center center;
    background-color: $colorBgBody;
  }

  .product__media-slider,
  .product__media-hover {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    overflow: hidden;
    background-color: #fff;
    @include transition(opacity, .3s, ease);

    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: $colorBgBody;
    }
  }

  .product__media-slider {
    .flickity-viewport {
      width: 100%;
      height: 100% !important;
    }
    .product__media-slide {
      width: 100%;
      height: 100%;
    }
    @include at-query ($max, $medium) {
      opacity: 1;
      visibility: visible;
    }
  }

  .product__media-slider--no-hover {
    opacity: 1;
    visibility: visible;
    @include transition( opacity, .2s, ease );

    .flickity-prev-next-button { opacity: 0; }
    &:hover .flickity-prev-next-button { opacity: 1; }
  }

  .product__media-slider--mobile {
    @include at-query ($min, $large) {
      display: none !important;
    }
  }

  .product__media-slider--desktop {
    @include at-query ($max, $medium) {
      display: none !important;
    }
  }

  .product__media-hover-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: {{ settings.image_size | default: 'cover' }};
  }

  .btn-wrapper {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: auto;
    pointer-events: none;

    @include at-query( $max, $small ) {
      display: none;
    }

    .btn {
      display: block;
      padding: 10px;
      width: 100%;
      text-align: center;
      cursor: pointer;
      pointer-events: auto;
      position: relative;
      opacity: 0;
      @include transform( translateY(100%) );
      @include transition( all, .3s, ease );

      &:focus,
      &.focus-visible {
        body:not(.no-outline) & {
          opacity: 1;
          @include transform( translateY(0) );
          @include transition(unquote('none'));
        }
      }
    }
  }

  .error {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 10px;
    border: 2px solid transparent;
    text-align: center;
    color: $errorRed;
    background: $colorBgBody;

.secondary-call-to-action {
  @include size-body(14px);
  display: inline-block;
  line-height: 30px;
  letter-spacing: 2px;
  position: relative;
  text-transform: uppercase;
  color: $colorTextHeading;
  font-family:$font-stack-button;
  font-weight:$font-weight-button;
  font-style:$font-style-button;

  &:hover,
  &:focus,
  &:active {
      transition: all 0.2s ease;
      color: darken($colorTextHeading,10%);
  }

  span {
    display: inline-block;
    vertical-align: middle;
  }

  @include at-query ( $max, $medium ) {
    display: inline-block;
    margin-top: 25px;
  }
}

.call-to-action-circle{
  position: relative;
  display: inline-block;
  font-size: 30px;
  line-height: 1;
  height: 30px;
  vertical-align: middle;
}

.call-to-action-triangle{
  @include size-body(14px);
  margin: auto;
  position: absolute;
  top: 50%;
  left: 50%;
  width: 10px;
  height: 15px;
  margin-top: -11px;
  margin-left: -12px;
}

.slider {
  position: relative;
  z-index: 5;

  &[data-current-style="text-dark"] {
    .slider__scroll-down path {
      fill: black;
    }

    .flickity-page-dots .dot { border-color: black; }
    .flickity-prev-next-button .arrow { fill: black; }
    .slider__arrow { color: black; }
  }

  &[data-current-style="text-light"] {
    .slider__scroll-down path {
      fill: white;
    }

    .flickity-page-dots .dot { border-color: white; }
    .flickity-prev-next-button .arrow { fill: white; }
    .slider__arrow { color: white; }
  }
}

.slider--zoom-out {
  img,
  .slide-background,
  .slide-image__container {
    transform: scale(1.15);
    transition: transform 0s ease-out .5s !important;
  }
  .is-selected img.lazyloaded,
  .is-selected .slide-background.lazyloaded,
  .is-selected .slide-background.placeholder-bg,
  .is-selected .slide-image__container {
    transform: scale(1);
    transition: transform 3s ease-out, opacity .3s ease-in !important;
  }

  &.no-transition .slide-background,
  &.no-transition .slide-image__container,
  &.no-transition img {
    transition: none;
  }

  .flickity-slider {
    transform: none !important;
  }

  .item {
    left: 0 !important;
    opacity: 0;
    z-index: -1;
    transition: opacity 0s linear .5s;
  }

  .item.is-selected {
    opacity: 1;
    z-index: 0;
    transition: opacity .5s ease-in-out;
  }
}

.slider--fade {
  .flickity-slider {
    transform: none !important;
  }

  .item {
    left: 0 !important;
    opacity: 0;
    z-index: -1;
    transition: opacity 0s linear .5s;
  }

  .item.is-selected {
    opacity: 1;
    z-index: 0;
    transition: opacity .5s ease-in-out;
  }
}

.flickity-page-dots {
  .slider & {
    bottom: 10px;
    padding: 0 50px;
    margin-bottom: 15px;

    @include at-query ($max, $small) {
      padding: 0 25px;
    }
  }

  .icons-row__slider & {
    padding: 0 50px;
    @include at-query ($max, $small) {
      padding: 0 25px;
    }
  }

  .dot:first-child { margin-left: 0; }
  .dot:last-child { margin-right: 0; }

  .slider--left & { text-align: left; }
  .slider--right & { text-align: right; }
  .slider--bottom-left & { text-align: left; }
  .slider--bottom-right & { text-align: right; }
  .slider--center & { text-align: center; }
  .slider--center.slider--has-arrow & { bottom: 30px; }

  .text-left & { text-align: left; }
  .text-center & { text-align: center; }
  .text-right & { text-align: right; }
}

.slider--center {
  .slide-inner { text-align: center; }
}
.slider--left,
.slider--bottom-left {
  .wrapper { margin-left: 0; }
  .slider-text-block {
    text-align: left;

    .button { margin-left: 0; }
  }
}
.slider--right,
.slider--bottom-right {
  .wrapper { margin-right: 0; }
  .slider-text-block {
    text-align: right;

    .button { margin-right: 0; }
  }
}
.slider--bottom-left,
.slider--bottom-right {
  .slider-text-block {
    @include at-query($min, $large) {
      top: auto;
      bottom: 0;
    }
  }
}

.item--text-light {
  .main-heading,
  .main-subheading,
  .secondary-call-to-action {
    color: white !important;
  }
}

.item--text-dark {
  .main-heading,
  .main-subheading,
  .secondary-call-to-action {
    color: black !important;
  }
}


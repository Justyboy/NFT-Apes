/*============================================================================
  #Collection Filters
==============================================================================*/
.collection-section {
  position: relative;
}

.collection__wrapper {
  @include transition( height, 1s, ease-out );

  &::after {
    content: '';
    display: table;
    clear: both;
    line-height: 0;
    height: 0;
  }
}
.collection__filters {
  position: sticky;
  position: -webkit-sticky;
  top: 0;
  z-index: 200;
}

.collection__filters-wrapper {
  position: relative;
  width: 100%;
  padding: 20px 0;
  background: $colorBgBody;
  z-index: 100;

  // Set white if body background is set to transparent
  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #fff;
    z-index: -1;
  }
}

.collection__filter-tag--default {
  margin-bottom: 10px;
  padding-right: 15px;

  button {
    display: block;
    padding-left: 25px;
    position: relative;
    text-align: left;

    &::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      margin-top: -8px;
      width: 16px;
      height: 16px;
      border: 1px solid $colorBorder;
      background: #fff;
    }
  }

  &.is-active {
    button {
      &::before {
        content: '';
        color: #fff;
        border-color: #333;
        background: #333 url("{{ 'icon-check.svg' | asset_url }}") no-repeat center center;
        background-size: 10px auto;
      }
    }
  }
}

.collection__filter-tag--swatch.swatch {
  &.is-active {
    .swatch-element {
      label {
        &::after {
          opacity: 1;
          visibility: visible;
        }
      }
    }
  }

  .swatch-element {
    width: 60px;
    display: block;
    margin: 0 2px 10px;
    line-height: 0;

    label {
      float: none;
      display: block;
      width: {{ swatch_width }};
      position: relative;
      padding: 0;
      margin: 0 auto 5px;
    }

    &::after {
      position: static;
      display: block;
      width: 100%;
      margin-top: 4px;
      background-color: transparent;
      padding: 0;
      border-radius: 0;
      box-shadow: none;
      border: 0;
      opacity: 1;
      visibility: visible;
      font-size: 11px;
      line-height: 1.4;
      white-space: normal;
      @include transform(unquote('none') );
    }
  }
}

.collection__filter-tag--number {
  display: inline-block;
  padding: 0;
  margin: 0 6px 10px 0;

  button {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6px 3px;
    height: 31px;
    min-width: 31px;
    border-radius: 16px;
    line-height: 17px;
    border: 1px solid $colorBorder;
    margin: 0;
  }

  &.is-active {
    button {
      color: #fff;
      border-color: #333;
      background: #333;
    }
  }

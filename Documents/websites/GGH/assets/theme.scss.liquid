  .flickity-prev-next-button {
    &:disabled { opacity: .25; }
    &.previous { left: 0; }
    &.next { right: 0; }
    .arrow { fill: $colorPrimary; }
  }

  @include at-query ($min, $large) {
    .grid__image:hover {
      .product__media-slider,
      .product__media-hover {
        opacity: 1;
        visibility: visible;
      }
    }
  }

  .product__media-slider--arrows-white {
    .flickity-prev-next-button {
      .arrow {
        fill: #fff;
      }
    }
  }

  .placeholder-svg,
  .placeholder-svg-filled {
    position: absolute;
    top: 0;
    left: 0;
  }

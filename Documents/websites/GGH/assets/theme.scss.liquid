/*============================================================================
  #Drawers
==============================================================================*/

.drawer {
  @include promote-layer();
  display: none;
  position: fixed;
  overflow-y: auto;
  overflow-x: hidden;
  top: 0;
  bottom: 0;
  padding: 0 ($gutter / 2) ($gutter / 2);
  max-width: 95%;
  z-index: $zindexDrawer;
  color: $colorDrawerText;
  background-color: $colorBgBody;
  transition: $drawerTransition;

  a {
    color: $colorTextHeading;
    &:hover,
    &:focus,
    &:active {
      transition: all 0.2s ease;
      color: darken($colorTextHeading,20%);
    }
  }

  input {
    border: none;
  }
  textarea {
    border-color: $colorBorder;
  }
}

.drawer--left {
  width: $drawerNavWidth;
  right: -$drawerNavWidth;
  border-right: 1px solid $colorDrawerBorder;
  border-left: 2px solid $colorAccent;

  .js-drawer-open-left & {
    display: block;
    @include transform(translateX(-$drawerNavWidth));

    .lt-ie9 & {
      left: 0;
    }
  }
}

.drawer--right {
  width: $drawerCartWidth;
  right: -$drawerCartWidth;

  border-left: 2px solid $colorAccent;

  .js-drawer-open-right & {
    display: block;
    @include transform(translateX(-$drawerCartWidth));

    .lt-ie9 & {
      right: 0;
    }
  }
}

#PageContainer {
  background: inherit;

  .full-header & {
    margin-top: -90px;
  }
}

.is-moved-by-drawer {
  @include promote-layer();

  will-change: initial;
  transition: $drawerTransition;
  .js-drawer-open-left & { @include transform(translateX(-$drawerNavWidth)); }
  .js-drawer-open-right & { @include transform(translateX(-$drawerCartWidth)); }
}

.drawer__header {
  display: table;
  height: 70px;
  width: 100%;
}

.drawer__title,
.drawer__close {
  display: table-cell;
  vertical-align: middle;
}

.drawer__title {
  width: 100%;
}

.drawer__close {
  width: 1%;
  text-align: center;
  font-size: em(18px);
}

.drawer__close button {
  position: relative;
  right: -20px;
  height: 100%;
  padding: 0 20px;
  color: inherit;

  &:active,
  &:focus {

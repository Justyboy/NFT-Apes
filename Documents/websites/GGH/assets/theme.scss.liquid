    thead {
      display: none;
    }

    tr {
      display: block;
      position: relative;
    }

    th { padding: 10px 10px 0px 10px; }

    // IE9 table layout fixes
    tr,
    td {
      float: left;
      clear: both;
      width: 100%;
    }

    th,
    td {
      display: block;
      padding: 15px 15px 15px 0;
    }

    td {
      &:first-child { padding: 0; }

      &::before {
        content: attr(data-label);
        float: left;
        text-align: left;
        width: 100px;
        font-size: 12px;
        line-height: 22px;
        position: absolute;
        left: 0;

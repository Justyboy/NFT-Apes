      right: auto;
      left: 100%;
    }
  }

  @include at-query ($max, 1399px) {
    width: 1px;
    height: 43px;
    top: 100%;
    right: 50%;

    .image-column__dot--end & {
      left: 20px;
      right: auto;
    }

    .image-column__dot--reverse-end & {

}

button {
  overflow: visible;
}

button[disabled],
html input[disabled] {
  cursor: default;
}
.btn{
  border-radius: 0px !important;
}
.btn,
.rte .btn {
  display: inline-block;
  position: relative;
  color: button-color($colorBtnPrimary);
  background: button-color($colorBtnPrimary);
  border: 2px solid $colorBtnPrimary;
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-family: $font-stack-button;
  font-weight: $font-weight-button;
  font-style: $font-style-button;
  box-shadow: none;
  line-height: 1.5;
  border-radius: {{ settings.button_border_radius }}px;
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
  @include size-button(16px);
  @include button-padding();
  @include transform( perspective(1px) translateZ(0) );
  @include transition(color, .3s);

  &::before {
    content: '';
    z-index: -1;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    @include transform( scaleX(1) );
    @include transition(transform, .3s, ease-out);
    -webkit-transform-origin: 50%;
    transform-origin: 50%;
    background: $colorBtnPrimary;
  }

  /*================ Set primary button colors ================*/
  &:hover {
    color: $colorBtnPrimary;
    border-color: $colorBtnPrimary;
    &::before {
      @include transform( scaleX(0) );
    }
  }

  &[disabled],
  &:disabled,
  &.disabled {
    cursor: default;
    background: $colorBtnPrimary;
    color: rgba(button-color($colorBtnPrimary), .5);

    &::before {
      @include transform( scaleX(0) );
    }
  }
}

.no-buttons .btn {display:none;}

button.btn {
  display: block;
  margin-right: auto;
}

.btn--secondary,
.rte .btn--secondary {
  @extend .btn;
}

.btn--small {
  padding: 9px 12px;
  @include size-button(12px);
  line-height: 1.4;
}

.btn--secondary,
.btn--light {
  color: button-color($colorBtnSecondary);
  background: button-color($colorBtnSecondary);
  border-color: button-color($colorBtnSecondary);

  &::before { background: $colorBtnSecondary; }
  &:hover {
    color: $colorBtnSecondary;
    border-color: button-color($colorBtnSecondary);
  }
  
  &[disabled],
  &:disabled,
  &.disabled {
    border: 2px solid rgba(button-color($colorBtnSecondary), .5);
    color: rgba(button-color($colorBtnSecondary), .5);
    background: $colorBtnSecondary;
    &::before { content: none; }
  }
}

.btn--ar {
  &::before { content: none; }
}

.btn--full { width: 100%; }

